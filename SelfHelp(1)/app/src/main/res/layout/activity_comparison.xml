<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/normal_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginTop="@dimen/dp_40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="@dimen/dp_67"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_42"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_40"
                android:background="@mipmap/back"
                android:gravity="center" />
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="862dp"
        android:layout_marginEnd="1693dp"
        android:layout_marginStart="87dp"
        android:text="@string/comparison"
        android:textSize="@dimen/dp_50"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recyclerView"
        app:layout_constraintStart_toStartOf="@+id/relativeLayout3"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3" />

    <RelativeLayout
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="768dp"
        android:layout_marginTop="232dp"
        android:layout_marginStart="@dimen/dp_48"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout3" >
        <TextView
            android:id="@+id/num_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/num_of_people"
            android:layout_marginStart="@dimen/dp_10"
            android:textSize="@dimen/dp_35"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/must_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dp_70"
            android:layout_marginTop="5dp"
            android:text="@string/must_select"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dp_30" />

        <TextView
            android:id="@+id/num_1"
            android:layout_width="@dimen/dp_210"
            android:layout_height="@dimen/dp_72"
            android:layout_alignParentTop="true"
            android:layout_marginTop="72dp"
            android:background="@drawable/selected_text_bg"
            android:gravity="center"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dp_35" />

        <TextView
            android:id="@+id/num_2"
            android:layout_width="@dimen/dp_210"
            android:layout_height="@dimen/dp_72"
            android:layout_alignParentTop="true"
            android:layout_marginTop="165dp"
            android:background="@drawable/select_text_bg"
            android:gravity="center"
            android:text="2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dp_35" />

        <TextView
            android:id="@+id/num_3"
            android:layout_width="@dimen/dp_210"
            android:layout_height="@dimen/dp_72"
            android:layout_alignParentTop="true"
            android:layout_marginTop="261dp"
            android:background="@drawable/select_text_bg"
            android:gravity="center"
            android:text="3"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dp_35" />

        <TextView
            android:id="@+id/num_4"
            android:layout_width="@dimen/dp_210"
            android:layout_height="@dimen/dp_72"
            android:layout_alignParentTop="true"
            android:layout_marginTop="354dp"
            android:background="@drawable/select_text_bg"
            android:gravity="center"
            android:text="4"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dp_35" />

        <TextView
            android:id="@+id/num_5"
            android:layout_width="@dimen/dp_210"
            android:layout_height="@dimen/dp_72"
            android:layout_alignParentTop="true"
            android:layout_marginTop="447dp"
            android:background="@drawable/select_text_bg"
            android:gravity="center"
            android:text="5"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dp_35" />

        <ImageView
            android:id="@+id/face"
            android:layout_width="852dp"
            android:layout_height="639dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="399dp"
            android:background="@android:color/white"/>

        <!--<com.sensetime.senseid.sdk.liveness.silent.common.camera.CameraPreviewView-->
            <!--android:id="@+id/camera_preview"-->
            <!--android:layout_width="852dp"-->
            <!--android:layout_height="639dp"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_marginStart="399dp"/>-->

        <com.xiyo.selfhelp.widget.CameraSurfaceView
            android:id="@+id/camera_preview"
            android:layout_width="852dp"
            android:layout_height="639dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="399dp"/>

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_72"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/face"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="@string/alert_info"
            android:textColor="@color/gray"
            android:textSize="@dimen/dp_25" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/id_recyclerView"
            android:layout_width="423dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="1368dp"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
