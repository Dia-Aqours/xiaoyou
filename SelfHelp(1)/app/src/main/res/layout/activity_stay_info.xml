<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/normal_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_78"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="@dimen/dp_20"
            android:background="@mipmap/back"
            android:gravity="center" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="78dp"
        android:layout_marginTop="129dp"
        android:text="@string/order_info"
        android:textSize="@dimen/dp_45" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="999dp"
        android:layout_height="602dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/dp_78"
        android:layout_marginTop="@dimen/dp_285"
        android:scaleType="fitXY"
        android:src="@mipmap/default_room"/>

    <RelativeLayout
        android:layout_width="669dp"
        android:layout_height="1080dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="101dp"
            android:layout_marginTop="138dp"
            android:text="豪华大床房"
            android:textSize="@dimen/dp_40" />

        <TextView
            android:id="@+id/date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="101dp"
            android:layout_marginTop="284dp"
            android:text="@string/date"
            android:textSize="@dimen/dp_26" />

        <TextView
            android:id="@+id/in_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="81dp"
            android:layout_marginTop="284dp"
            android:gravity="right|center_vertical"
            android:text="11:00"
            android:textColor="@color/gray"
            android:textSize="@dimen/dp_26" />

        <TextView
            android:id="@+id/lodger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="101dp"
            android:layout_marginTop="379dp"
            android:text="@string/lodger"
            android:textSize="@dimen/dp_26" />

        <TextView
            android:id="@+id/lodger_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="80dp"
            android:layout_marginTop="379dp"
            android:gravity="right|center_vertical"
            android:text="2位"
            android:textSize="@dimen/dp_26" />

        <TextView
            android:id="@+id/deposit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="101dp"
            android:layout_marginTop="473dp"
            android:text="@string/deposit"
            android:textSize="@dimen/dp_26" />

        <TextView
            android:id="@+id/deposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="80dp"
            android:layout_marginTop="473dp"
            android:gravity="right|center_vertical"
            android:text="00.00"
            android:textSize="@dimen/dp_26" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="101dp"
            android:layout_marginTop="595dp"
            android:text="@string/pay_type"
            android:textSize="@dimen/dp_26" />

        <RelativeLayout
            android:id="@+id/wei_pay"
            android:layout_width="@dimen/dp_112"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="101dp"
            android:layout_marginTop="674dp"
            >

            <ImageView
                android:id="@+id/img_wei"
                android:layout_width="@dimen/dp_112"
                android:layout_height="@dimen/dp_112"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@mipmap/weipay"
                android:gravity="center" />

            <TextView
                android:id="@+id/pay_wei_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="130dp"
                android:gravity="center"
                android:text="@string/wei_pay"
                android:textSize="@dimen/dp_22" />

            <ImageView
                android:id="@+id/wei_round"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="185dp"
                android:layout_marginStart="@dimen/dp_44"
                android:background="@mipmap/round_selected"
                android:gravity="center" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/ali_pay"
            android:layout_width="@dimen/dp_112"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="83dp"
            android:layout_marginTop="674dp">

            <ImageView
                android:id="@+id/img_ali"
                android:layout_width="@dimen/dp_112"
                android:layout_height="@dimen/dp_112"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@mipmap/alipay"
                android:gravity="center" />

            <TextView
                android:id="@+id/pay_ali_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="130dp"
                android:gravity="center"
                android:text="@string/ali_pay"
                android:textSize="@dimen/dp_22" />

            <ImageView
                android:id="@+id/ali_round"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="185dp"
                android:layout_marginRight="@dimen/dp_44"
                android:background="@mipmap/round_normal"
                android:gravity="center" />

        </RelativeLayout>


        <TextView
            android:id="@+id/￥"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/name"
            android:layout_marginBottom="45dp"
            android:text="￥"
            android:textSize="@dimen/dp_18" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/￥"
            android:layout_toEndOf="@+id/￥"
            android:text="00.00"
            android:textSize="@dimen/dp_30" />

        <TextView
            android:id="@+id/total_time"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/price"
            android:layout_toEndOf="@+id/price"
            android:gravity="center"
            android:text="3晚"
            android:textColor="@color/gray"
            android:textSize="@dimen/dp_20" />

        <TextView
            android:id="@+id/confirm_payment"
            android:layout_width="@dimen/dp_180"
            android:layout_height="63dp"
            android:layout_alignBaseline="@+id/￥"
            android:layout_alignEnd="@+id/in_time"
            android:background="@color/reservation"
            android:gravity="center"
            android:text="@string/confirm_payment"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dp_30" />

    </RelativeLayout>


</RelativeLayout>
