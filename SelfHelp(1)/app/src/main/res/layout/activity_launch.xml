<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/normal_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_main">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="0dp"
        android:layout_height="67dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="195dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="37dp"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@mipmap/icon" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="300dp"
            android:text="2018-06-31 19:21"
            android:textColor="@android:color/white"
            android:textSize="36dp" />

        <View
            android:layout_width="3dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="247dp"
            android:background="@android:color/white" />

        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_41"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="182dp"
            android:src="@mipmap/icon_weather" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="96dp"
            android:text="29â„ƒ"
            android:textColor="@android:color/white"
            android:textSize="36dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="624dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3">

        <com.youth.banner.Banner xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/banner"
            android:layout_width="1220dp"
            android:layout_height="540dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="30dp" />

        <ImageView
            android:id="@+id/getCard"
            android:layout_width="466dp"
            android:layout_height="540dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/banner"
            android:layout_marginEnd="90dp"
            android:src="@mipmap/getcard"></ImageView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="1782dp"
        android:layout_height="@dimen/dp_250"
        android:layout_marginStart="52dp"
        android:weightSum="5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout4">

        <ImageView
            android:id="@+id/reservation"
            android:layout_width="324dp"
            android:layout_height="258dp"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@mipmap/icon_reservation" />

        <ImageView
            android:id="@+id/stay_in"
            android:layout_width="324dp"
            android:layout_height="258dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@mipmap/icon_stay_in" />

        <ImageView
            android:id="@+id/check_out"
            android:layout_width="324dp"
            android:layout_height="258dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@mipmap/check_out" />

        <ImageView
            android:id="@+id/check_in"
            android:layout_width="324dp"
            android:layout_height="258dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@mipmap/check_in" />

        <ImageView
            android:id="@+id/comparison"
            android:layout_width="324sp"
            android:layout_height="258dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@mipmap/comparison" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
